<% User.all.each do |user| %>
  <% next if user == current_user %>
 <div class="media border">
  <%= user_image_small(user) %>
    <div class="media-body">
        <h5 class="mt-0 title font-weight-bold" id='notification'>
          <%= user.name %> <span></span>
          
        </h5>
        <p class="sub-title" id= 'notice-chat'>
          <%# <%= messages_sent %>
          <p> Message </p>

          
        </p>

        <%= form_with(scope: :notice, url: './notice_create', method: :post, local: true) do |f| %>
              <div class="form-group">
                 <%= f.label :body %>
                 <%= f.text_field :body, class: 'form-control' %>
               </div>

              <%= f.hidden_field :recipient_id, :value => user.id %>
          <% end %>
      </div>
</div>
<% end %>


